<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; Back</a>
  <h2 class="title mt-5">Update Post</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Blog Title</label>
      <input class="input is-info" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content">Blog Content</label>
        <textarea class="textarea is-info" id="post-content" name="post-content" type="text" >{{post.post_content}}</textarea>
    </div>
    
    <button type="submit" class="button is-success">Update Post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
  </form>
</article>

{{> comments post.comments}}

